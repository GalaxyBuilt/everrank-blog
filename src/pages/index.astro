---
import Layout from '../layouts/Layout.astro';
import { PILLARS } from '../config';
---

<Layout title="EverRank Blog | AI SEO & Performance">
  <h1>EverRank Blog</h1>
  <p class="subtitle">Institutional-grade SEO, Performance, and AI Content insights.</p>
  
  <div class="grid">
    {Object.keys(PILLARS).map((key) => {
      const pillar = PILLARS[key];
      return (
        <div class="pillar-card">
          <h2>{pillar.title}</h2>
          <ul>
            {pillar.categories.slice(0, 5).map((cat) => (
              <li>{cat}</li>
            ))}
            {pillar.categories.length > 5 && <li>+ {pillar.categories.length - 5} more...</li>}
          </ul>
        </div>
      )
    })}
  </div>
</Layout>

<style>
  h1 { font-size: 3rem; font-weight: 900; margin-bottom: 1rem; background: linear-gradient(to right, #3b82f6, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
  p.subtitle { font-size: 1.25rem; color: rgba(255,255,255,0.5); margin-bottom: 4rem; }
  .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; }
  .pillar-card { background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.1); padding: 2rem; border-radius: 2rem; transition: all 0.3s ease; }
  .pillar-card:hover { border-color: rgba(59, 130, 246, 0.5); transform: translateY(-5px); }
  h2 { font-size: 1.5rem; margin-bottom: 1.5rem; color: #60a5fa; }
  ul { list-style: none; padding: 0; margin: 0; }
  li { margin-bottom: 0.75rem; color: rgba(255,255,255,0.4); font-size: 0.9rem; }
  li:before { content: "â†’"; margin-right: 0.5rem; color: #3b82f6; }
</style>
