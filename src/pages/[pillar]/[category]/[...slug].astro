---
import Layout from '../../../layouts/Layout.astro';
import { PILLARS } from '../../../config';

export const prerender = true;

export async function getStaticPaths() {
  const paths = [];
  
  for (const pillarKey of Object.keys(PILLARS)) {
    const pillar = PILLARS[pillarKey as keyof typeof PILLARS];
    for (const category of pillar.categories) {
      const catSlug = category.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/-+$/, '');
      
      paths.push({
        params: { 
          pillar: pillar.slug, 
          category: catSlug,
          slug: undefined 
        },
        props: { pillarTitle: pillar.title, categoryName: category }
      });

      paths.push({
        params: {
          pillar: pillar.slug,
          category: catSlug,
          slug: 'welcome-to-everrank-seo'
        },
        props: { pillarTitle: pillar.title, categoryName: category }
      });
    }
  }

  return paths;
}

const { pillar, category, slug } = Astro.params;
const { pillarTitle, categoryName } = Astro.props;

// Use a dynamic image path if one exists, otherwise fallback to default OG
const postImage = slug ? `https://everrank.app/promotions/${slug}.png` : `https://everrank.app/og-image.png`;
---

<Layout 
  title={`${categoryName} | ${pillarTitle}`} 
  description={`Deep dive into ${categoryName} within the ${pillarTitle} pillar.`}
  image={postImage}
>
  <div class="article-container">
    <nav class="breadcrumb">
        <a href="/blog">Blog</a>
        <span>/</span>
        <a href="#">{pillarTitle}</a>
        <span>/</span>
        <span class="curr">{categoryName}</span>
    </nav>

    <article class="luxe-article">
        <header class="article-header">
            <div class="category-badge">{pillarTitle}</div>
            <h1>{categoryName}</h1>
            <div class="article-meta">
                <span>By ContentIQ AI</span>
                <span class="dot"></span>
                <span>5 min read</span>
                <span class="dot"></span>
                <span>Feb 11, 2026</span>
            </div>
        </header>

        <div class="article-content">
            <div class="path-well">
                <span class="label">Topical Slug:</span>
                <code>/blog/{pillar}/{category}/{slug || ''}</code>
            </div>
            
            <p class="lead"> This page is a critical node in the EverRank topical authority graph. By clustering deep technical insights under the <strong>{pillarTitle}</strong> silo, we establish institutional-grade dominance.</p>

            <div class="ai-insight-box">
                <div class="ai-head">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z"/><path d="M12 6v6l4 2"/></svg>
                    <span>ContentIQ AI Strategy</span>
                </div>
                <p>Generating high-authority evergreen content for "<strong>{categoryName}</strong>". Our systems are currently analyzing search intent, LSI keywords, and competitor gaps for this specific cluster.</p>
            </div>

            <h2>Methodology</h2>
            <p>We approach search performance as an engineering challenge. Content is not just text; it's data that must be structured, interlinked, and optimized for both humans and LLMs (Large Language Models).</p>
            
            <ul>
                <li>Topical clustering via recursive silo mapping.</li>
                <li>Intent-driven keyword orchestration.</li>
                <li>Real-time performance auditing via Next Scanner.</li>
            </ul>
        </div>

        <footer class="article-footer">
            <a href="/blog" class="back-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5m7 7-7-7 7-7"/></svg>
                Back to Knowledge Base
            </a>
        </footer>
    </article>
  </div>
</Layout>

<style>
