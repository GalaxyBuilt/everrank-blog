    margin: 0 auto;
  }

  .breadcrumb {
    display: flex;
    gap: 12px;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 40px;
  }

  .breadcrumb a {
    color: var(--text-muted);
    text-decoration: none;
  }

  .breadcrumb a:hover { color: var(--primary); }
  .breadcrumb .curr { color: var(--text); font-weight: 600; }

  .luxe-article {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 32px;
    padding: 60px;
    box-shadow: var(--card-shadow);
  }

  .article-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .category-badge {
    display: inline-block;
    background: rgba(102, 126, 234, 0.1);
    color: var(--primary);
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    margin-bottom: 16px;
    border: 1px solid rgba(102, 126, 234, 0.2);
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.2;
