  ul { margin-bottom: 32px; padding-left: 20px; }
  li { margin-bottom: 12px; }

  .article-footer {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }

  .back-link {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--primary);
    font-weight: 700;
    transition: gap 0.2s;
  }

  .back-link:hover { gap: 12px; }

  @media (max-width: 768px) {
    .luxe-article { padding: 40px 24px; }
    h1 { font-size: 2.2rem; }
  }
</style>
