    justify-content: center;
    gap: 16px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .dot { width: 4px; height: 4px; background: var(--border); border-radius: 50%; }

  .path-well {
    background: var(--bg-alt);
    padding: 16px;
    border-radius: 12px;
    border: 1px solid var(--border);
    margin-bottom: 40px;
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.85rem;
  }

  .path-well .label { font-weight: 700; color: var(--text-muted); }
  code { background: var(--bg); padding: 4px 8px; border-radius: 4px; color: var(--primary); }

  .article-content {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--text);
  }

  .lead { font-size: 1.3rem; margin-bottom: 40px; font-weight: 500; }

  .ai-insight-box {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border: 1px solid var(--primary);
