  }

  .ai-head {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 12px;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 1px;
  }

  h2 { font-size: 2rem; margin: 60px 0 24px; font-weight: 700; }
